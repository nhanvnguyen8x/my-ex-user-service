PORT=3002
LOG_LEVEL=info
DB_HOST=localhost
DB_PORT=5432
DB_USER=postgres
DB_PASSWORD=postgres
DB_NAME=user_db

# JWT validation (use one of the two)
# Symmetric (e.g. HS256): shared secret between auth-service and this service
JWT_SECRET=your-256-bit-secret
# Asymmetric (e.g. RS256): PEM public key from auth-service (newlines as \n)
# JWT_PUBLIC_KEY="-----BEGIN PUBLIC KEY-----\n...\n-----END PUBLIC KEY-----"
# Optional: algorithm when using JWT_SECRET (default: HS256)
# JWT_ALGORITHM=HS256
